{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Aspire AppHost (Nucleus)", 
            "type": "coreclr",
            "request": "launch",
            // IMPORTANT: Please verify the TargetFramework ('net9.0') and Configuration ('Debug') match your build output.
            // You can check the actual path in: d:\Projects\Nucleus\Nucleus.AppHost\bin\Debug\net9.0\
            "program": "${workspaceFolder}/Nucleus.AppHost/bin/Debug/net9.0/Nucleus.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Nucleus.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)" 
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views" 
            }
        }
    ]
}
